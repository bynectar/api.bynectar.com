{{> head}}
{{> header}}

	<section id="galleriesHero">
		<div class="heroBody">
			<div class="heroText">
				<p>{{data.tester}}</p>
				<h1 class="heroText__surTitle">Photo Galleries</h1>
				<h2 class="heroText__title"><span>Meet Our Couples</span></h2>
			</div>
		</div>
	</section>

	<section id="galleryBody">

	<!-- if galleries -->
	{{#if galleries}}
		{{#each galleries}}
		<!-- Gallery Thumbnail -->
		<div class="galleriesThumbnail fadeInOnScroll">
			<div class="galleriesThumbnail__photo">
				<a href="/galleries/{{key}}" title="{{title}}">
					{{> image image=this.thumbnailPhoto key=key width=1200 height=800 wide=true}}
				</a>
			</div>
			<div class="galleriesThumbnail__text">
				<h3 class="galleriesThumbnail__title"><span>{{title}}</span></h3>
				<h4 class="galleriesThumbnail__venue">{{venue.name}} &bull; {{location}}</h4>
				<a href="/galleries/{{key}}" class="galleriesThumbnail__cta cta">View Gallery</a>
			</div>
		</div>
		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}

	</section>

{{> footer}}