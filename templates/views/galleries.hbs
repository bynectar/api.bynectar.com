{{> head}}
{{> header}}

	<section id="galleriesHero">
		<div class="heroBody">
			<div class="heroText">
				<h1 class="heroText__surTitle">Photo Galleries</h1>
				<h2 class="heroText__title">Meet Our Couples</h2>
			</div>
		</div>
	</section>

	<section id="galleryBody">

	<!-- if galleries -->
	{{#if galleries}}
		{{#each galleries}}
		<!-- Gallery Thumbnail -->
		<div class="galleryThumbnail">
			<div class="galleryThumbnail__text">
				<h3 class="galleryThumbnail__title">{{title}}</h3>
				<h4 class="galleryThumbnail__location">{{subtitle}}</h4>
				<p class="galleryThumbnail__blurb">{{{blurb.body}}}</p>
				<a href="/galleries/{{key}}" class="galleryThumbnail__cta">View Gallery</a>
			</div>
			<div class="galleryThumbnail__photo">
				<a href="/galleries/{{key}}" title="{{title}}">
					{{> image image=this.thumbnail key=key}}
				</a>
			</div>
		</div>
		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}

	</section>

{{> footer}}