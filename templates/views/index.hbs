{{!< default}}
{{> head}}
{{> header}}

	<section id="homeHero">
		<div class="heroBody">
			<div id="homeHero__video">
				<video autoplay loop preload>
					<source src="/video/nectar_feature.mp4" type="video/mp4">
					<source src="/video/nectar_feature.mp4" type="video/ogg">
				</video>
			</div>
			<div class="heroText">
				<!--<img src="/images/nectar-wordmark.png" width="600" height="111" alt="nectar" />-->
				<h2 class="heroText__title">It takes love.</h2>
				<p>Lorem ipsum dolor sit amet, lorem ipsum dolor sit.</p>
				<a href="#">Watch the Video</a>
			</div>
		</div>
	</section>

	<section id="homeBody">

		<!-- if galleries -->
		{{#if data.gallery}}
			<!-- Gallery Thumbnail -->
			<div class="galleriesThumbnail homeBlock">
				<div class="galleriesThumbnail__photo scrollFade">
					{{> image image=data.gallery.thumbnailPhoto key=data.gallery.key}}
				</div>
				<div class="galleriesThumbnail__text">
					<h4 class="galleriesThumbnail__location">From our Galleries</h4>
					<h3 class="galleriesThumbnail__title">{{data.gallery.title}}</h3>
					{{!<p class="galleriesThumbnail__blurb">{{{blurb.body\}\}\}</p>}}
					<a href="/galleries/{{data.gallery.key}}" class="galleriesThumbnail__cta cta">View Gallery</a>
				</div>
			</div>
		{{/if}}

		<!-- About Block 1 -->
		<div class="homeBlock">
			<div class="homeBlock__photo scrollFade">
				{{> imageCustom
					title='placeholder image'
					src='/images/process/2016-10-08_Misty-Centerpiece-1.jpg'
				}}
			</div>
			<div class="homeBlock__text">
				<h4 class="homeBlock__subtitle">Our Process</h4>
				<h3 class="homeBlock__title">How we do it.</h3>
				<p class="homeBlock__blurb">Congratulations! You’re getting married and you’re talking to us about your flowers. Our first step is an introductory phone call. We’ll talk about your wedding plans, how the two of you met, how he popped the question. Afterward we’ll send you a questionnaire to get some more detail about your event, but on this call we just want to get to know you better.</p>
				<a href="/our-process/" class="cta">Find out more</a>
			</div>
		</div>

	</section>
{{> footer}}