// Nav
#header
	position fixed
	top 0
	left 0
	right 0
	height 7.5rem
	background transparent
	z-index header-z
	transition background linear .2s

	#headerLogo
		position absolute
		background-image url(/images/nectar-logo.png)
		background-size 105px 140px
		background-position 0 0
		background-repeat no-repeat

body.heading-dark
	#header
		#header__navButton
			color white
		#header__nav
			color white
			#nav__pipe
				color white

html.scroll #header
	background rgba(255,255,255,.9)
	#header__navButton
		color dk-gray
	#header__nav
		color dk-gray
		#nav__pipe
			color dk-gray

// Mobile Nav
@media (max-width:medium)
	#header
		height 5.5rem

		#headerLogo
			top 15px
			left 10px
			width 52px
			height 35px
			background-size 52px 70px
			z-index 10

		#header__navButton
			position fixed
			top 10px
			right 15px
			z-index 10
			font-size 2rem
			cursor pointer
			&:hover
				color amber

		#header__nav
			position fixed
			top 0
			bottom 0
			left 0
			right 0
			background rgba(255,255,255,.9)
			font-size 2.5rem
			text-align center
			color dk-gray !important
			display none

			ul
				flexContainer()
				flex-direction column
				align-items center
				list-style none
				position absolute
				top 10rem
				bottom 10rem
				left 0
				right 0
				margin 0
				padding 0

				h1,li
					flex 1
					display inline
					font-family font-playfair
					font-weight 400
					a
						margin 0 .5rem
						background none
						text-transform none
						transition color linear .1s
						border none
						color inherit
						&:hover
							color amber

				#nav__name
					letter-spacing .25em
					font-size 4rem
					line-height 4rem
					font-family font-playfair
					font-style italic
					font-weight normal

				#nav__pipe
					display none

	body.heading-dark
		#header
			#headerLogo
				background-position 0 -35px
			#header__navButton
				color white

	html.scroll #header
		#headerLogo
			background-position 0 0
		#header__navButton
			color dk-gray

// Desktop Nav
@media (min-width:medium)
	#header
		height 7.5rem

		#headerLogo
			top 15px
			left 10px
			width 105px
			height 70px

		#header__navButton
			display none

		#header__nav
			font-size 1rem
			text-align center
			color dk-gray
			padding-top 36px
			top 0
			left 0
			right 0

			ul
				list-style none
				margin 0
				padding 0

				h1,li
					display inline
					font-family font-work
					font-weight 400
					a
						margin 0 .5rem
						background none
						text-transform none
						transition color linear .1s
						border none
						color inherit
						&:hover
							color amber

				#nav__name
					letter-spacing .25em
					font-size 1.25rem
					font-family font-playfair
					font-style italic
					font-weight normal

				#nav__pipe span
					margin 0 1rem
					color mid-gray

	body.heading-dark
		#header
			#headerLogo
				background-position 0 -70px

	html.scroll #header
		background rgba(255,255,255,.9)
		#headerLogo
			background-position 0 0
