// Sections
columnMaxWidth(w)
	width 100%
	max-width w
	margin-left auto
	margin-right auto

// Flexbox Structure
flexContainer() // Flex Container with vertical centering
	display flex
	align-items center

flexLTR() // Horizontal Flexbox ordered Left-to-Right
	flex-direction row

flexRTL() // Horizontal Flexbox ordered Left-to-Right (Reversed)
	flex-direction row-reverse

// Columns
column(breakpoint,count)
	@media (min-width: breakpoint)
		float left
		box-sizing content-box
		width percentage(count/columns)
		&:after
			content " "
			display block
			clear both

padColumn(breakpoint,left,right)
	@media (min-width: breakpoint)
		padding-left percentage(left/columns)
		padding-right percentage(right/columns)

padHeight(breakpoint,top,bottom)
	@media (min-width: breakpoint)
		padding-top top
		padding-bottom bottom

padWidth(breakpoint,left,right)
	@media (min-width: breakpoint)
		padding-left left
		padding-right right

push(breakpoint,count)
	@media (min-width: breakpoint)
		margin-left unit(count * (100/columns), '%')

centered-column()
	float none
	margin 0 auto

pingPong()
	flexContainer()
	box-sizing border-box
	flex-direction column
	@media (min-width: medium)
		flex-direction row
		&:nth-child(odd)
			flex-direction row-reverse

pingPongImage()
	flex 1
	width 100%
	@media (min-width: medium)
		width auto

pingPongText()
	padHeight(small,3rem,6rem)
	padHeight(medium,2rem,2rem)
	flex 1
	text-align center
	h4
		surTitle()
	a.cta
		button()
		margin-top 2rem
	& > *
		padWidth(small,5%,5%)
		padWidth(medium,20%,20%)

// Misc
aspect(breakpoint,w,h)
	@media (min-width: breakpoint)
		width 100%
		padding-top percentage(h/w/2)
		padding-bottom percentage(h/w/2)

vPad(breakpoint,top,bottom)
	@media (min-width: breakpoint)
		padding-top top
		padding-bottom bottom

positionFull()
	position absolute
	top 0
	right 0
	bottom 0
	left 0

positionAll(val)
	position absolute
	top val
	right val
	bottom val
	left val

// Images
thumbnailImage()
	background-size cover
	background-position center center
	position relative
	box-sizing border-box
	cursor pointer
	transition opacity linear .2s

// Flex
flexDirection(breakpoint,direction)
	@media (min-width: breakpoint)
		flex-direction direction

flexGrow(breakpoint,value)
	@media (min-width: breakpoint)
		flex value

// Feature Blocks
feature()
	background-position center center
	background-size cover

featureViewport()
	feature()
	height 100%

// Buttons
button()
	display inline-block
	border lt-gray solid 1px
	padding .5rem 1rem
	border-radius 2px
	text-decoration none
	font-family font-work
	font-size 1rem
	color dk-gray
	background white
	transition all linear .2s
	&:hover
		border-color mid-gray

blackUnderline()
	background-image linear-gradient(to bottom,rgba(68,68,68,.6) 50%,rgba(68,68,68,0) 50%)
	background-size 2px .2em
	background-position 0 1.07em
	background-repeat repeat-x
	text-decoration none
	&:hover
		background-size 2px .3em

whiteUnderline()
	blackUnderline()
	background-image linear-gradient(to bottom,rgba(255,255,255,.6) 50%,rgba(255,255,255,0) 50%)

amberUnderline()
	blackUnderline()
	background-image linear-gradient(to bottom,rgba(255,255,255,.6) 50%,rgba(247,148,30,0) 50%)

.button-radius( tl = 4px, tr = 4px, br = 4px, bl = 4px )
	-webkit-border-top-left-radius = tl
	-webkit-border-top-right-radius = tr
	-webkit-border-bottom-right-radius = br
	-webkit-border-bottom-left-radius = bl

	-moz-border-radius-topleft = tl
	-moz-border-radius-topright = tr
	-moz-border-radius-bottomright = br
	-moz-border-radius-bottomleft = bl

	border-top-left-radius = tl
	border-top-right-radius = tr
	border-bottom-right-radius = br
	border-bottom-left-radius = bl

// Gradients
.gradient(startColor = #eee, endColor = white)
	background-color = startColor
	background = -webkit-gradient(linear, left top, left bottom, from(startColor), to(endColor))
	background = -webkit-linear-gradient(top, startColor, endColor)
	background = -moz-linear-gradient(top, startColor, endColor)
	background = -ms-linear-gradient(top, startColor, endColor)
	background = -o-linear-gradient(top, startColor, endColor)

// Transitions
.transition(transition)
	-webkit-transition = transition
	-moz-transition = transition
	-ms-transition = transition
	-o-transition = transition

// Typography
center()
	text-align center

// Layout
textHero()
	text-align center
	.heroBody
		positionFull()
		display flex
		align-items center
		.heroText
			flex 1
			padding-top 3rem
			.heroText__title
				pageTitle()
			.heroText__surTitle
				surTitle()

imageHero()
	text-align center
	background-position center center
	background-size cover
	.heroBody
		positionFull()
		display flex
		align-items center
		color white
		.heroText
			flex 1
			padding-top 3rem
			.heroText__title
				pageTitle()
				color white
			.heroText__surTitle
				surTitle()
				color white
