html
	font-family font-work
	line-height 1.75
	color dk-gray
	@media (min-width: small)
		font-size 14px
	@media (min-width: medium)
		font-size 14px
	@media (min-width: large)
		font-size 12px

p
	margin 0 0 1rem
	font-size 1.25rem
	line-height 1.5

heading()
	font-weight normal
	line-height 1.25
	margin 0 0 .25em
	span
		highlight()

pageTitle()
	heading()
	font-family font-playfair
	font-style italic
	font-weight normal

surTitle()
	font-family font-work
	font-size 1rem
	font-weight 400
	text-transform uppercase
	letter-spacing .05rem

h1
	heading()
	font-family font-playfair
	font-size 6rem

h2
	heading()
	font-family font-playfair
	font-size 5rem
	@media (max-width:medium)
		font-size 3.5rem

h3
	heading()
	font-family font-playfair
	font-size 3rem

h4
	heading()
	font-family font-work
	font-size 1.5rem
	font-style normal

h5
	heading()
	font-family font-work
	font-size 1rem
	font-style normal

h6
	heading()
	font-size 1rem
	font-style normal

a
	color amber
	amberUnderline()

a.cta
	button()

blockquote
	font-size 3rem
	line-height 1.25
	margin 0 4rem 1rem
	&:before
		content "“"
	&:after
		content "”"

// Text Card
.textCard
	paperEdge()
	position relative
	background-color white
	background linear-gradient(to bottom, #F5F5F5, white)
	box-shadow 0 20px 40px rgba(0,0,0,.2)
	padding 6rem 2rem
	margin-left 3rem
	margin-right 3rem
	box-sizing border-box

.textDivider_horizontal
	display block
	background #DDDDDD
	width 3rem
	height 1px
	margin 2rem auto 0

.textDivider_vertical
	width 1px
	height 2em
	margin 0 .5rem
	background #DDDDDD
	display inline-block
	vertical-align middle

// Photo Credit
.photoCredit
	position absolute
	bottom .75rem
	right 1rem
	color white
	a
		color white
		whiteUnderline()

// Forms
form

	fieldset
		border none
		padding .5rem 0
		margin .5rem 0
		text-align left

	label
		box-sizing border-box
		display block
		width 100%
		padding 0 .5rem
		color dk-gray
		&.inlineLabel
			display inline

	input,textarea
		box-sizing border-box
		width 100%
		padding 0 .5rem
		font-size 1rem
		line-height 3rem
		background lt-gray
		border none
		&[type="checkbox"], &[type="radio"]
			display inline
			width auto

	textarea
		padding .5rem
		line-height 1.5rem

	button, input[type="submit"]
		button()
		margin-top 2rem

