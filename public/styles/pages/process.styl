#processHero,#processHero
	textHero()
	aspect(small,5,6)
	aspect(medium,5,2)
	aspect(large,2,1)
	.heroBody
		padWidth(small,10%,10%)
		p
			padWidth(small,20%,20%)

#processBody
	box-sizing border-box

	.processStep
		padding-right 2rem
		box-sizing border-box

		&:first-child
			margin-top 0

		&.processStep__overlay
			display block
			aspect(small,5,2)
			position relative
			background-size cover
			background-position center -100px
			background-repeat no-repeat
			margin-left -6rem

			&:nth-child(even)
				margin-left 6rem

			.textOverlay
				pingPongText()
				position absolute
				background linear-gradient(to bottom, rgba(30,30,30,0), rgba(30,30,30,.5))
				top 0
				right 0
				bottom 0
				left 0
				display flex
				flex-direction row
				align-items center
				text-align center
				padding 0 10%
				color white

				> div
					flex 1

		&.processStep__pingPong
			display block
			pingPong()
			.processStep__photo
				pingPongImage()

			.processStep__text
				pingPongText()
