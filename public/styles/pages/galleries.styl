// Gallery Image Styles
.thumbnailWrapper
	border .25rem solid white
	background-color mid-gray
	box-sizing border-box
	position relative
	overflow hidden
	.thumbnailImage
		thumbnailImage()
		aspect(small,6,5)
		transition all linear .2s
	.thumbnailPhotoCredit
		position absolute
		bottom 1rem
		right 1.5rem
		z-index 10
		color white
	.thumbnailOverlay
		positionAll(0)
		background rgba(0,0,0,0.3)
		background rgba(97,58,12,.3)
		display flex
		align-items center
		display flex
		flex-direction row
		align-items center
		opacity 0
		transition all linear .2s
		cursor pointer
		.thumbnailText
			flex 1
			padding 15% 10% 10%
			text-align center
			color white
			transition all ease-out .3s
			p
				heading()
				font-family font-playfair
				font-size 1.5rem
				margin-bottom 1.5rem
			a
				color white
				transition all linear .1s
				&:hover
					color amber
					.fa-pinterest
						color amber
			.thumbnailByline
				margin-bottom 1.5rem
			.fa-pinterest
				font-size 1.5rem
				color white
				margin-bottom 1.5rem
				transition all linear .1s
	&.thumbnailHover:hover
		.thumbnailImage
			filter blur(5px)
		.thumbnailOverlay
			opacity 1
			.thumbnailText
				padding-top 10%

// Gallery Listing View Styles
#galleriesHero,#galleryHero
	textHero()
	aspect(small,1,1)
	aspect(medium,5,2)
	aspect(large,3,1)
	#galleryHero__location
		color dk-gray

#galleryBody
	width 100%
	padding .25rem
	box-sizing border-box

.galleriesThumbnail
	pingPong()
	.galleriesThumbnail__text
		pingPongText()
		.galleriesThumbnail__location
			color dk-gray
	.galleriesThumbnail__photo
		pingPongImage()

.galleryThumbnail
	flexContainer()
	box-sizing border-box
	.galleryThumbnail__text
		display none
		flexGrow(small,2)
		flexGrow(medium,1)
		box-sizing border-box
		text-align center
		h4
			surTitle()
		.galleryThumbnail__cta
			button()
			margin-top 2rem
		& > *
			padWidth(small,10%,10%)
			padWidth(medium,20%,20%)
	.galleryThumbnail__photo
		flexGrow(small,1)
		.thumbWrapper
			aspect(small,3,2)
			aspect(medium,2,1)
			aspect(large,2,1)

// Gallery View Styles
#galleryGrid
	.galleryGrid__item
		box-sizing border-box

#galleryQuote
	position relative
	#galleryQuote__photo
		border .25rem solid white
		thumbnailImage()
		aspect(small,5,7)
		aspect(medium,2,1)
		cursor pointer
	#galleryQuote__overlay
		positionAll(.25rem)
		display flex
		flex-direction row-reverse
		align-items center
		color white
		box-sizing border-box
		background linear-gradient(90deg,rgba(0,0,0,0),rgba(0,0,0,0.6))
		pointer-events none
		#galleryQuote__text
			flex-basis 100%
			padding 2rem
			text-align center
			box-sizing border-box
			blockquote
				heading()
				font-family font-playfair
				font-style italic
				font-size 1.5rem
				@media (min-width:medium)
					font-size 1.5rem
				@media (min-width:large)
					font-size 2.5rem
			#galleryQuote__byline
				surTitle()
				color white

#galleryInfo
	display flex
	text-align center
	@media (max-width:medium)
		flex-direction column
	#galleryInfo__vendors
		flex 1
		padding 4rem 0
		ul
			margin 0
			padding 0
			list-style none
			li
				padding .25rem
	#galleryInfo__cta
		flex 1
		padding 4rem 0

#galleryModal
	display none
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 100
	overflow hidden
	background rgba(255,255,255,0.9)
	#galleryModal__slider
		positionAll(2rem)
		bottom 3.5rem
		transition all ease-out .2s
		#galleryModal__close
			position absolute
			top 0
			right 0
			z-index 10
			cursor pointer
			font-size 1.5rem
			&:hover
				color amber
		#galleryModal__slideContainer
			positionAll(0)
			div
				height 100%
				background-position center center
				background-size contain
				background-repeat no-repeat
			.thumbActions
				flexContainer()
				height auto
				position absolute
				bottom -2.5rem
				left 0
				right 0
				.thumbActions__action
					flex 1
					color dk-gray
					a
						color dk-gray
						cursor pointer
						.fa
							font-size 1.5rem
							cursor pointer
				.thumbActions__byline
					bottom -2.5rem
					right 0
					a
						color dk-gray
						blackUnderline()
		ul.flex-direction-nav
			list-style none
			padding 0
			positionAll(0)
			z-index 9
			li
				position absolute
				top 0
				bottom 0
				display flex
				align-items center
				padding 0
				a
					font-family "Material Icons"
					font-size 2rem
					background none
					color dk-gray
					&:hover
						color amber
				&.flex-nav-prev
					left 0
				&.flex-nav-next
					right 0
				&:hover
					color amber
