#formHero
	textHero()
	aspect(small,5,6)
	aspect(medium,5,3)
	aspect(large,3,1)
	.heroText
		padWidth(small,10%,10%)
		p
			font-size 1.25rem
		a.heroCta
			button()
			margin-top 2rem

#formBody
	flexContainer()
	align-items stretch
	box-sizing border-box
	padding .25rem
	margin-bottom 4rem
	@media (min-width:small)
		flex-direction column-reverse
	@media (min-width:medium)
		flex-direction row
	.formColumn
		padWidth(small,5%,5%)
		padWidth(medium,20%,20%)
		padWidth(large,30%,30%)
		flex 1
		text-align center
