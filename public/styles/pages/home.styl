#homeHero
	imageHero()
	aspect(small,1,1)
	aspect(medium,2,1)
	.heroText
		padWidth(small,20%,20%)
		padWidth(medium,10%,10%)

#homeBody
	padding .25rem
	box-sizing border-box

	.homeBlock
		flexContainer()
		text-align center
		&:nth-child(2n+2)
			flex-direction row-reverse
		.homeBlock__photo
			flex 1
		.homeBlock__text
			flex 1
			box-sizing border-box
			.homeBlock__subtitle
				surTitle()
			& > *:not(a)
				padWidth(small,10%,10%)
				padWidth(medium,20%,20%)
			a.cta
				margin-top 2rem